---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import HeroSection from '../../components/HeroSection.astro';

const posts = [
  {
    id: 'how-to-fill-out-a-form',
    title: 'How to Fill Out a Form Without Losing Your Sparkle',
    excerpt: 'Opal guides Raya through the human jungle of applications with gentle pawsteps and a magical checklist.',
    date: 'June 7, 2025',
    author: 'Opal the Cat',
    authorRole: 'Resident Muse',
    authorAvatar: '/opal-avatar.jpg',
    category: 'Cozy How-Tos',
    image: 'https://images.unsplash.com/photo-1518791841217-8f162f1e1131?auto=format&fit=crop&w=2070&q=80'
  },
  {
    id: 'a-soft-start',
    title: 'A Soft Start: How to Begin That Thing You\u2019\ ve Been Avoiding',
    excerpt: 'A gentle ritual for getting unstuck, complete with a “cozy-start” routine and a purring template.',
    date: 'June 14, 2025',
    author: 'Opal the Cat',
    authorRole: 'Resident Muse',
    authorAvatar: '/opal-avatar.jpg',
    category: 'Cozy How-Tos',
    image: 'https://cdn.pixabay.com/photo/2016/11/11/23/34/cat-1817970_1280.jpg'
  },
  {
     id: 'do-forms-have-feelings',
    title: 'Do Forms Have Feelings? A Feline Wonders.',
    excerpt: 'A whimsical exploration of the emotional side of paperwork—half poem, half pep talk.',
    date: 'June 10, 2025',
    author: 'Opal the Cat',
    authorRole: 'Resident Muse',
    authorAvatar: '/opal-avatar.jpg',
    category: "Opal\'s Musings",
    image: 'https://images.unsplash.com/photo-1500336624523-d727130c3328?auto=format&fit=crop&w=2070&q=80'
  },
  {
    id: 'window-worries',
    title: 'What I\u2019ve Learned Sitting in the Window While You Worry',
    excerpt: 'Opal reflects on human anxiety and reminds you that every small step is still magic.',
    date: 'June 18, 2025',
    author: 'Opal the Cat',
    authorRole: 'Resident Muse',
    authorAvatar: '/opal-avatar.jpg',
    category: "Opal\'s Musings",
    image: 'https://images.unsplash.com/photo-1517849845537-4d257902454a?auto=format&fit=crop&w=2070&q=80'
  },
  {
    id: 'cozy-rebrand',
    title: 'Your Cozy Rebrand: From Overwhelmed to \u2728Ooh, I Got This',
    excerpt: 'A lifestyle shift blueprint to help organize your digital world and infuse routine with joy.',
    date: 'June 19, 2025',
    author: 'Opal the Cat',
    authorRole: 'Resident Muse',
    authorAvatar: '/opal-avatar.jpg',
    category: 'Design Your Life',
    image: 'https://images.unsplash.com/photo-1519710164239-da123dc03ef4?auto=format&fit=crop&w=2070&q=80'
  },
  {
    id: 'clutter-free-magic',
    title: 'Clutter-Free Magic: Designing Your Digital Den',
    excerpt: 'Tips for organizing your inbox and downloads like a sunbeam-filled windowsill.',
    date: 'June 20, 2025',
    author: 'Opal the Cat',
    authorRole: 'Resident Muse',
    authorAvatar: '/opal-avatar.jpg',
    category: 'Design Your Life',
    image: 'https://images.unsplash.com/photo-1508921912186-1d1a45ebb3c1?auto=format&fit=crop&w=2070&q=80'
  }
];

const categories = [...new Set(posts.map(post => post.category))];
const sortedPosts = [...posts].sort(
  (a, b) => new Date(b.date).getTime() - new Date(a.date).getTime()
);
---

<Layout title="Opal's Cozy Corner" description="Gentle musings and magical how-tos from Opal the Cat.">
  <Header />
  <main>
    <HeroSection
      title="Opal's Cozy Corner"
      highlightText="Cozy"
      description="Curl up with gentle guides and whimsical musings from your favorite feline."
    />
  
    <!-- Category Filter -->
    <div class="container-custom py-8">
      <div class="flex flex-wrap gap-4 justify-center mb-12">
        <a
          href="#"
          data-category-filter="all"
          class="px-4 py-2 rounded-full bg-primary-600 text-white font-medium text-sm hover:bg-primary-700 transition-colors"
        >
          All Posts
        </a>
        {categories.map((category) => (
          <a
            href="#"
            data-category-filter={category}
            class="px-4 py-2 rounded-full bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 font-medium text-sm hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
          >
            {category}
          </a>
        ))}
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedPosts.map((post, index) => (
          <div
            class="card border border-gray-200 dark:border-gray-700 overflow-hidden slide-up"
            style={'animation-delay: ' + (index * 100) + 'ms'}
            data-post
            data-post-category={post.category}
          >
            <a href={'/blog/' + post.id} class="block">
              <img 
                src={post.image} 
                alt={post.title}
                class="w-full h-48 object-cover"
                loading="lazy"
              />
            </a>
            <div class="p-6">
              <div class="flex items-center mb-4">
                <span class="text-sm font-medium text-primary-600 dark:text-primary-400">{post.category}</span>
                <span class="mx-2 text-gray-300 dark:text-gray-600">•</span>
                <span class="text-sm text-gray-500 dark:text-gray-400">{post.date}</span>
              </div>
              <a href={'/blog/' + post.id} class="block mb-3">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors">{post.title}</h2>
              </a>
              <p class="text-gray-600 dark:text-gray-300 mb-6">{post.excerpt}</p>
              <div class="flex items-center">
                <img 
                  src={post.authorAvatar} 
                  alt={post.author} 
                  class="w-10 h-10 rounded-full mr-3 object-cover"
                  loading="lazy"
                />
                <div>
                  <p class="font-medium text-gray-900 dark:text-white">{post.author}</p>
                  <p class="text-sm text-gray-500 dark:text-gray-400">{post.authorRole}</p>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="mt-12 flex justify-center">
        <a href="/blog/page-2" class="btn-outline">
          Load More Articles
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v10.586l3.293-3.293a1 1 0 011.414 1.414l-5 5a1 1 0 01-1.414 0l-5-5a1 1 0 111.414-1.414L9 14.586V4a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
      <script is:inline>
         const initFiltering = () => {
          const filterLinks = document.querySelectorAll('[data-category-filter]');
          const postsEl = document.querySelectorAll('[data-post]');

          filterLinks.forEach((link) => {
            link.addEventListener('click', (e) => {
              e.preventDefault();
              const category = link.dataset.categoryFilter;
              filterLinks.forEach((l) => l.classList.remove('bg-primary-600', 'text-white'));
              link.classList.add('bg-primary-600', 'text-white');

              postsEl.forEach((post) => {
                const matches = category === 'all' || post.dataset.postCategory === category;
                post.classList.toggle('hidden', !matches);
              });
          });
        });
      };
      
         document.addEventListener('astro:page-load', initFiltering);
        initFiltering();
      </script>
    </div>
  </main>
  <Footer />
</Layout>
